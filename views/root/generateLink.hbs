<div class="container">
    <section>
        <div class="row p-5">
            <div class="col-md-4">
                <h3> Game Name: {{game.name}}</h3>
            </div>
            <div class="col">
                <h3>Category: {{game.category}}</h3>
            </div>
        </div>
        <form action="/generateLink/{{game._id}}" method="post">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="players">No of players</label>
                    <input type="text" class="form-control" id="players" name="player">
                </div>
                <div class="form-group col-md-4">
                    <label for="level">Game Level</label>
                    <select id="level" class="form-control" name="level">
                        <option value="">Choose...</option>
                        <option value="easy">Easy</option>
                        <option value="medium">Medium</option>
                        <option value="hard">Hard</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="mode">Mode</label>
                    <select id="mode" class="form-control" name="mode">
                        <option value="">Choose...</option>
                        <option value="creative">Creative</option>
                        <option value="survival">Survival</option>
                        <option value="hardcore">Hardcore</option>
                        <option value="adventure">Adventure</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Generate link</button>
            <a href="/" class="btn btn-primary">Go Back</a>
        </form>
    </section>
    <div class="row">
        <div class="col">
            <hr>
        </div>
        <div class="col-auto">OR</div>
        <div class="col">
            <hr>
        </div>
    </div>
    <section>
        <h4 class="p-3">Select Game from drop down</h4>
        <form action="/generateLink/dropdown_list" method="post">
            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="level">Select Game</label>
                    <select id="game" class="form-control" name="game_id" required>
                        <option value="">Choose...</option>
                        {{#each gameList}}
                        <option value={{this._id}}>{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="players">No of players</label>
                    <input type="text" class="form-control" id="players" name="player">
                </div>
                <div class="form-group col-md-3">
                    <label for="level">Game Level</label>
                    <select id="level" class="form-control" name="level">
                        <option value="">Choose...</option>
                        <option value="easy">Easy</option>
                        <option value="medium">Medium</option>
                        <option value="hard">Hard</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="mode">Mode</label>
                    <select id="mode" class="form-control" name="mode">
                        <option value="">Choose...</option>
                        <option value="creative">Creative</option>
                        <option value="survival">Survival</option>
                        <option value="hardcore">Hardcore</option>
                        <option value="adventure">Adventure</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Generate link</button>
            <a href="/" class="btn btn-primary">Go Back</a>
        </form>
    </section>
</div>