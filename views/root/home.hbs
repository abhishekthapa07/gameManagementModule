<div class="container">
    <div class="card mb-3 border-0">
        <h1>Games List</h1>
        <div class="row pt-5">
            {{#each AllGames}}
            <div class="col-md-4 p-3">
                <div class="card" style="width: 21rem;">
                    <img class="card-img-top" src="https://source.unsplash.com/random/300x200?sig={{@index}}"
                        alt="Card image cap">
                    <div class="card-body">
                        {{this.link}}
                        <h6>Name :{{this.name}} </h6>
                        <h6>Category : {{this.category}}</h6>
                        <h6>Source : {{this.source}}</h6>
                        <h6>Created At : {{this.createdAt}}</h6>
                        <h6>Updated At : {{this.updatedAt}}</h6>
                        <a href="/updateGame/{{this._id}}" class="btn btn-primary">Change Category</a>
                        <a href="/generateLink/{{this._id}}" class="btn btn-primary">Generate Link</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>